<div class="products mb-4 mt-4 justify-content-center">
    <div class="row item justify-content-center ">
        @if (!Model.Any())
        {
            <h3 style="height:500px">No Advertises Found !!</h3> 
        }
        else
        {
            foreach (var product in Model)
            {
                var dep = " ";
                var cat = " ";
                if (product.depName == "Buy / Sell") { dep = RCS.Resources.Resource.BuySell; }
                else if (product.depName == "Services") { dep = RCS.Resources.Resource.Services; }
                else if (product.depName == "Jobs") { dep = RCS.Resources.Resource.Jobs; }
                else if (product.depName == "News / Events") { dep = RCS.Resources.Resource.NewsEvents; }


                if (product.catName == "Equipment") { cat = RCS.Resources.Resource.Equipment; }
                else if (product.catName == "Basis") { cat = RCS.Resources.Resource.Basis; }
                else if (product.catName == "Devices") { cat = RCS.Resources.Resource.Devices; }
                else if (product.catName == "Shops"){ cat = RCS.Resources.Resource.Shops;}
                else if (product.catName == "Interior Design") { cat = RCS.Resources.Resource.InteriorDesign; }
                else if (product.catName == "Exterior Design") { cat = RCS.Resources.Resource.ExteriorDesign; }
                else if (product.catName == "Design and Print Menues") { cat = RCS.Resources.Resource.DesignandPrintMenus; }
                else if (product.catName == "Franchise Guide") { cat = RCS.Resources.Resource.FranchiseGuide; }
                else if (product.catName == "Create Brandings") { cat = RCS.Resources.Resource.CreateBrandings; }
                else if (product.catName == "Stewarts") { cat = RCS.Resources.Resource.Stewarts; }
                else if (product.catName == "Chiefs") { cat = RCS.Resources.Resource.Chiefs; }
                else if (product.catName == "Delivery") { cat = RCS.Resources.Resource.Delivery; }
                else if (product.catName == "Cleaners") { cat = RCS.Resources.Resource.Cleaners; }
                else if (product.catName == "Accountants") { cat = RCS.Resources.Resource.Accountants; }
                else if (product.catName == "Managers") { cat = RCS.Resources.Resource.Managers; }
                else if (product.catName == "Local") { cat = RCS.Resources.Resource.Local; }
                else if (product.catName == "Global") { cat = RCS.Resources.Resource.Global; }


                <div class="p-2  wow bounceInUp" style="height:400px" data-CateName="@product.catName">
                    <img src="~/uploadedFiles/@product.imagePath">
                    <h6 class="p-1 mt-2">@product.name <span class="font-weight-bold float-right" style="font-size: 12px; line-height: 25px;">@product.price EGP</span></h6>

                    <span class="badge badge-primary p-1 " style="margin-top:8px">@dep</span>
                    <span class="badge badge-info p-1 ">@cat</span>
                    <a href="/Advertises/showDetails?id=@product.id" class="btn btn-danger float-right" role="button">@RCS.Resources.Resource.ShowDetails</a>
                </div>                
            }
        }
    </div>
</div>

@Html.PagedListPager(Model,page=>Url.Action("index",new { page }),new PagedListRenderOptions() { Display = PagedListDisplayMode.IfNeeded , DisplayPageCountAndCurrentLocation = true })


@section scripts{
    <script>
        new WOW().init();
        $(document).ready(function () {
            $("nav .navbar-collapse ul li a:eq(1)").css("color", "#ff4301");
            $("#filter .cat").on("click", function () {
                $("#filter .dep").removeClass("active");
                $(this).parent().prev().toggleClass("active");
                $("#filter .cat").removeClass("active");
                $(this).toggleClass("active");
                let val = $(this).attr("data-CateName");
                $.ajax({
                    url: `/api/department/GetCatPro?catName=${val}`,
                    method: "GET",
                    beforeSend: function () {
                        $(".products .item").empty();
                    },
                    success: function (data) {
                        $(".pagination-container").removeClass(" d-flex");
                        $(".pagination-container").addClass(" d-none");

                        $(".products .item").empty();
                        if (data.length == 0) {
                            $(".products .item").append(`<h3 style="height: 500px">No Advertises Found !!</h3>`);
                        }
                        for (let i = 0; i < data.length; i++) {
                            var imageName = data[i].image.split("\\");
                            var elem = `
                                    <div class="p-2  " style="height:400px" data-CateName="${data[i].cat}">
                                        <img src="../uploadedFiles/${imageName[imageName.length - 1]}">
                                        <h6 class="p-1 mt-2"> ${data[i].nam} <span class="font-weight-bold float-right" style="font-size: 12px; line-height: 25px;">${data[i].price} EGP</span></h6>
                                        <span class="badge badge-primary p-1 " style="margin-top:8px">${data[i].dep}</span>
                                        <span class="badge badge-info p-1 ">${data[i].cat}</span>
                                        <a href="/Advertises/showDetails?id=${data[i].id}" class="btn btn-danger float-right" role="button">@RCS.Resources.Resource.ShowDetails</a>
                                    </div>`;

                            $(".products .item").append(elem);
                        }
                    }
                });
            });

            $(".pagination-container").addClass(" d-flex justify-content-center");
            $(".pagination li").addClass(" page-item");
            $(".pagination li a").addClass(" page-link");

        });
    </script>
}

