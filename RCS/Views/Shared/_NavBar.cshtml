
@if (HttpContext.Current.Request.Cookies["Language"] != null)
{
    if (HttpContext.Current.Request.Cookies["Language"].Value == "ar")
    {
        <nav class="navbar navbar-expand-lg bg-warning navbar-light  wow fadeIn">
            <div class="collapse navbar-collapse " id="navbarSupportedContent">
                <ul class="navbar-nav ml-auto">
                    @if (!User.IsInRole("Admin"))
                    {
                        <li class="nav-item ">
                            <a class="nav-link" href="/Home/index">@RCS.Resources.Resource.Home</a>
                        </li>
                        <li class="nav-item ">
                            <a class="nav-link " href="/Advertises/index">@RCS.Resources.Resource.Advertises</a>
                        </li>
                     }
                    @Html.Partial("_LoginPartial")
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle"  id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            <img src="../images/Arabic.png" width="30px" />AR
                        </a>
                        <div class="dropdown-menu p-0 bg-transparent" aria-labelledby="navbarDropdown">
                            <a class="dropdown-item" href="/Home/change?Lang=en"><img src="../images/English.png" width="30px" />EN</a>
                        </div>
                    </li>
                </ul>
            </div>
            <a class="navbar-brand ml-4 text-dark" href="~/Home/index">
                <img src="~/images/logo.png" class="d-inline-block align-top float-left" alt="" loading="lazy">
            </a>
            <button class="navbar-toggler bg-light" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
        </nav> 
    }


    else
    {
        <nav class="navbar navbar-expand-lg bg-warning navbar-light  wow fadeIn">
            <a class="navbar-brand ml-4 text-dark" href="~/Home/index">
