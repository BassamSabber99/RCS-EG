@model RCS.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}


<div class="reg-container wow pulse">
    <div class="container p-5 reg">
        <div class="img-container2">
            <img src="~/images/icon.png">
        </div>
        @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary("", new { @class = "text-danger" })
            <h1 class="text-center mb-5 text-white">Sign Up</h1>
            <div class="form-group row">
                @Html.LabelFor(m => m.UserName, new { @class = "col-sm-2 control-label text-white" })
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.UserName, new { @class = "form-control col-sm-10", placeholder="Enter User Name"})
                </div>
            </div>
            <div class="form-group row">
                @Html.LabelFor(m => m.Phone, new { @class = "col-sm-2 control-label text-white" })
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.Phone, new { @class = "form-control col-sm-10", placeholder = "Enter Phone Number" })
                </div>
            </div>
            <div class="form-group row">
                @Html.LabelFor(m => m.address, new { @class = "col-sm-2 control-label text-white" })
                <div class="col-md-10">
                    @Html.TextAreaFor(m => m.address, new { @class = "form-control col-sm-10", placeholder = "Enter Address" })
                </div>
            </div>
            <div class="form-group row">
                @Html.LabelFor(m => m.Email, new { @class = "col-sm-2 control-label text-white" })
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control col-sm-10", placeholder = "Enter Email Address" })
                </div>
            </div>
            <div class="form-group row">
                @Html.LabelFor(m => m.Gender, new { @class = "col-sm-2 control-label text-white" })
                <div class="col-md-10">
                    @Html.DropDownListFor(m => m.Gender, new List<SelectListItem>{ new SelectListItem { Value = "male", Text = "Male" }, new SelectListItem { Value = "female", Text = "Female" }},"Choose Gender" ,new { @class = "form-control col-sm-10" })
                </div>
            </div>
            <div class="form-group row">
                @Html.LabelFor(m => m.Password, new { @class = "col-sm-2 control-label text-white" })
                <div class="col-md-10">
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control col-sm-10", placeholder = "Enter Password" })
                </div>
            </div>
            <div class="form-group row">
                @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-sm-2 control-label text-white" })
                <div class="col-md-10">
                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control col-sm-10", placeholder = "Confirm Password" })
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-10">
                    <button type="submit" class="btn btn-warning mt-4">Sign Up</button>
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script>
        new WOW().init();
        $(document).ready(function() {
            $("nav .navbar-collapse ul li a:eq(2)").css("color", "#ff4301")
            $("body").css({
                "background-image": "url(../images/reg-back.jpg)",
                "background-position": "top center",
                "background-size": "cover",
                "background-repeat": "no-repeat",

            })

        })
    </script>
}
