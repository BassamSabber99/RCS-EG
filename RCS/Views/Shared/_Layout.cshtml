<!DOCTYPE html>
<html dir="@RCS.Resources.Resource.dir">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="The RCS Group is a global online marketplace in which we provide all the services of cafes and restaurants. You can offer the restaurant or café for sale if desired.
    Also, through the platform, you can buy and sell all the supplies for the café or restaurant, such as refrigerators, ovens, espresso machines, and others ..">
    <meta name="keywords" content="art branding,art media,art media,art design,art franchise,RCS,rcs,Resturant and cafe services , kitchen machnie
     , resturant machines , coffe shop machines , jobs , staff , chefs, services, interior design , exterior design , devices ">
    <meta name="author" content="Ahmed Saber">
    <meta name="copyright" content="Art Media All rights reserved">
    <title>@ViewBag.Title | @RCS.Resources.Resource.TitleQoute </title>
    <link rel="icon" href="~/images/icon.png">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @if (HttpContext.Current.Request.Cookies["Language"] != null)
    {
        if (HttpContext.Current.Request.Cookies["Language"].Value == "ar" )
        {
            <link rel="stylesheet" href="~/Content/styleAr.css" />
        }
    }

</head>
<body style="padding:0;margin:0;box-sizing:border-box;">
    
        @Html.Partial("_NavBar")

        @RenderBody()

    <!--SocialIcons-->
    <div id="social" class="socialIcon">
        <a target="_blank" href="https://www.facebook.com/Restaurants.Cafes.Services">Facebook<span><i class="fab fa-facebook-square"></i></span></a>
    </div>
 
    <!--END-SocialIcons-->
      
    <!--Chat-->
    <div class="chat container">
        <button class="btn btn-primary btn-lg"><i class="fab fa-facebook-messenger"></i></button>
    </div>
    <div class="inbox p-5 bg-primary">
        <div class="container">
            <h4 class="text-center text-white mb-4"><i class="fas fa-mail-bulk text-info"></i> Send Message</h4>
        </div>
        <form>
            <div class="form-group text-white">
                <label for="exampleFormControlTextarea1" class="ml-3 text-white font-weight-bolder">Messages:</label>
                <div class="chatBox"></div>
            </div>
            <div class="form-group text-white">
                <label for="message" class="ml-3 text-white">Enter Message</label>
                <div class="container">
                    <div class="row">
                        <input type="text" class="form-control col-md-8 ml-3 text-white" id="message" placeholder="Enter Your Message">
                        <button class="btn btn-sm btn-outline-info"><i class="fas fa-paper-plane"></i></button>
                    </div>

                </div>
            </div>
        </form>
    </div>
    <!--END-Chat-->
    <!--Footer-->
    <footer class="container-fluid bg-warning col-lg-12 col-md-12 col-sm-12 text-dark py-2 overflow-hidden">
        <p class="text-center">2020&copy; All Copyrights Are Reserved By RCS</p>
    </footer>
    <!--END-Footer-->

    @Scripts.Render("~/bundles/lib")
    @RenderSection("scripts", required: false)
</body>
</html>
